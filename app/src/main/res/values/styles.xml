<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="TabLayout">
        <item name="android:layout_marginTop">@dimen/margin_tiny</item>
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="tabTextColor">@color/colorAccent</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabBackground">@color/listBackgroundEven</item>
    </style>

    <style name="Font">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Font.Menu">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@drawable/text_selector_menu</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="Font.Price">
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">end|center_vertical</item>
    </style>

    <style name="Font.Header">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>





</resources>
